CMAKE_MINIMUM_REQUIRED(VERSION 3.0)

INCLUDE(ExternalProject)


FUNCTION(BUILD_MULTIPRECISION BUILD_DIR)

  SET(MULTIPRECISION_SRC ${BUILD_DIR}/src)

  EXTERNALPROJECT_ADD(
    boost_multiprecision
    GIT_REPOSITORY https://github.com/boostorg/multiprecision.git
    GIT_TAG bd13b140e07b4166ee35cbb21fca42c1da9a955f
    SOURCE_DIR ${MULTIPRECISION_SRC}
    CONFIGURE_COMMAND ""
    BUILD_COMMAND ""
    INSTALL_COMMAND ""
  )

  SET(MULTIPRECISION_INCLUDE_DIRS ${BUILD_DIR}/src/include PARENT_SCOPE)

  ADD_DEPENDENCIES(DEPS boost_multiprecision)

ENDFUNCTION(BUILD_MULTIPRECISION)
